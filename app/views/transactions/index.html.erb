<h1>KelloggCoin Ledger</h1>

<!-- Step 1: List all transactions, starting with the ICO -->
<%transactions = Transaction.all %>

<ol>
<% for transaction in transactions %>
<% sender = User.find_by({ "id" => transaction["from_user_id"] })%>
<% recipient = User.find_by({ "id" => transaction["to_user_id"] }) %>
    <li>
     <% if sender %>
     <%= transaction["amount"] %> from <%= sender["name"] %> to <%= recipient["name"] %>
     <% else %>
      Initial coin offering: <%= transaction["amount"] %> to <%= recipient["name"] %>
    <% end %>
    </li>
  <% end %>
</ol>

